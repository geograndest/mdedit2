{
    "name": "mdedit2",
    "version": "2.1.0",
    "description": "mdEdit2 repository with integration of Angular 1.7, webpack, babel, and jest",
    "main": "index.js",
    "author": "Guillaume Ryckelynck <guillaume.ryckelynck@grandest.fr>",
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.11.2",
        "@uirouter/angularjs": "^1.0.23",
        "angular": "^1.7.8",
        "angular-loading-bar": "^0.9.0",
        "bootstrap": "^4.3.1",
        "clean-deep": "^3.1.0",
        "deep-rename-keys": "^0.2.1",
        "downloadjs": "^1.4.7",
        "file-loader": "^4.2.0",
        "jquery": "^3.4.1",
        "jsonpath": "^1.0.2",
        "less-loader": "^5.0.0",
        "lodash": "^4.17.15",
        "lodash-uuid": "0.0.3",
        "popper.js": "^1.16.0",
        "rename-keys": "^2.0.1",
        "showdown": "^1.9.1",
        "ui-bootstrap4": "^3.0.6",
        "url-loader": "^2.2.0",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "@babel/core": "^7.7.0",
        "@babel/preset-env": "^7.7.1",
        "babel-loader": "^8.0.6",
        "babel-plugin-angularjs-annotate": "^0.10.0",
        "copy-webpack-plugin": "^5.0.4",
        "css-loader": "^3.2.0",
        "eslint": "^5.16.0",
        "eslint-loader": "^2.1.2",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.9.0",
        "less": "^3.10.3",
        "mini-css-extract-plugin": "^0.8.0",
        "node-sass": "^4.13.0",
        "resolve-url-loader": "^3.1.0",
        "sass-loader": "^7.3.1",
        "style-loader": "^0.23.1",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0"
    },
    "scripts": {
        "dev": "set NODE_ENV=development && webpack --mode development --config=config/webpack.dev.js",
        "dev:watch": "set NODE_ENV=development && webpack --mode development --watch --config=config/webpack.dev.js",
        "build": "set NODE_ENV=production && webpack --progress --config=config/webpack.prod.js",
        "prod": "npm run build",
        "start": "set NODE_ENV=development && webpack-dev-server --progress --mode development --open --config=config/webpack.dev.js",
        "watch": "npm run dev:watch",
        "lint": "eslint assets/scripts/*.js",
        "clean": "rm -rf dist",
        "test": "jest --watch"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.js",
        "transform": {
            "^.+\\.(js|jsx)$": "babel-jest",
            "^(?!.*\\.(js|jsx|json)$)": "<rootDir>/jest/fileTransform.js"
        }
    }
}
